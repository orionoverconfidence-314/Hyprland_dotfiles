{ // Pacman updates module
    "custom/pacman": {
        "format": "{icon}{0}",
        "return-type": "json",
        "format-icons": {
            "pending-updates": "ÔÄô ",
            "updated": "ÔÅù "
        },
        "exec-if": "which waybar-updates",
        "exec": "waybar-updates",
        "on-click": "foot -e 'sudo pacman -Syu --noconfirm'"
    },
    // Media player module
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "~/.config/waybar/scripts/mediaplayer.py --player spotify 2> /dev/null"
    },
    // Help module
    "custom/help": {
        "format": "?",
        "tooltip": true,
        "tooltip-format": "Key Binds",
        "menu": "on-click",
        "menu-file": "~/.config/waybar/scripts/custom_help.xml",
        "menu-actions": {
            "KeyBinds": "~/.config/rofi/scripts/launch_keybinds.sh"
        }
    },
    // Notification module
    "custom/notification": {
        "tooltip": true,
        "format": "<span size='16pt'>{icon}</span>",
        "format-icons": {
            "notification": "Û±Ö´",
            "none": "Û∞Çú",
            "dnd-notification": "Û∞Ç†",
            "dnd-none": "Û∞™ì",
            "inhibited-notification": "Û∞Çõ",
            "inhibited-none": "Û∞™ë",
            "dnd-inhibited-notification": "Û∞Çõ",
            "dnd-inhibited-none": "Û∞™ë"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
